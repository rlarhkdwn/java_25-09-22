package day18;

import java.io.File;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

public class Customer {
	private String name;
	private List<Account> accounts = new ArrayList<>();
	
	public Customer(String name) {
		this.name = name;
		File folder = new File("D:\\web_0826_kkj\\memo\\" + name);
		if (!folder.exists()) {
            folder.mkdir();
        }
		
	}
	
	public void addAccount(Account account) {
		accounts.add(account);
	}

	public void plusMoney(String accountNum, int money) throws IOException {
		accounts.get(accounts.indexOf(new Account(accountNum, name))).plusMoney(money);
	}
	
	public void minusMoney(String accountNum, int money) throws IOException {
		accounts.get(accounts.indexOf(new Account(accountNum, name))).minusMoney(money);
	}
	
	public void sendMoney(String accountNum, String src, String dst, int money) throws IOException {
		accounts.get(accounts.indexOf(new Account(accountNum, name))).sendMoney(src, dst, money);
	}
	
	public void receiveMoney(String accountNum, String src, String dst, int money) throws IOException {
		accounts.get(accounts.indexOf(new Account(accountNum, name))).receiveMoney(src, dst, money);
	}
	
	
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public List<Account> getAccounts() {
		return accounts;
	}

	public void setAccounts(List<Account> accounts) {
		this.accounts = accounts;
	}
	
	
}