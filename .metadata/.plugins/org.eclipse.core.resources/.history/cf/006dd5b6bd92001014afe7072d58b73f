package day16;

import java.util.Arrays;

public class Stream03 {

	public static void main(String[] args) {
		int[] arr = {1, 2, 4, 5, 7, 8, 4, 5, 3, 8, 0, 9, 5, 3, 7, 4, 5, 3, 2, 9, 1};
		// 스트림으로 구성하여 중복제거하고, 정렬 후 짝수만 출력
		Arrays.stream(arr).distinct().sorted().filter(n -> n % 2 == 0).forEach(n -> System.out.println(n));
		
		// 스트림으로 구성하여 중복제거하고 홀수만 배열로 리턴
		arr = Arrays.stream(arr).distinct().filter(n -> n % 2 == 1).toArray();
		System.out.println(arr);
	}

}
